<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background: Fading Outline -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_golden_brown"
                android:centerColor="@color/golden_brown"
                android:endColor="@color/golden_brown"
                android:type="linear"
                android:angle="0" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Solid Color: Centered within Fading Outline -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_golden_brown" />
        </shape>
    </item>

</layer-list>
